{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Welcome!{% endblock %}</title>
  <link rel="stylesheet" href="/bootstrap-5.0.0-beta1-dist/css/bootstrap.min.css">
  {% block stylesheets %}{% endblock %}
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">OAuth School</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/">Exercises</a></li>
          {% if user %}
            <li class="nav-item"><a class="nav-link" href="#">View List</a></li>
          {% endif %}
        </ul>
        <ul class="navbar-nav">
          {% if user %}
            <li class="nav-item"><a class="nav-link" href="#">Log Out</a></li>
          {% else %}
            <li class="nav-item"><a class="nav-link" href="#">Get Started</a></li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>


  {% block body %}{% endblock %}


  <script src="/bootstrap-5.0.0-beta1-dist/js/bootstrap.min.js"></script>
  {% block javascripts %}{% endblock %}
</body>
</html>
